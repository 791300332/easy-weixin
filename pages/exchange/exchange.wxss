@import "../../lib/common.wxss";

.ranking-body {
  padding: 20rpx 20rpx;
}
.explain {
  background:rgba(0,0,0,0.2);
  color:#FFFFFF;
}
.list{
  margin-top:20px;
}

.item {
  width:100%;
  background-color:#FFEFD5
}

.item image {
  width:64px;
  height:100px;
  float:left;
}

.item-info {
  float:left;
  text-align: left;
  letter-spacing: 2px;
  width:50%;
  margin-left:2%
}

.item-info-name {
  font-size:16px;
}

.item-info-level {
  font-size:12px;
  line-height: 18px;
  color:#aaa
}

.item-question-answer {
  float:right;
  width:28%
}
