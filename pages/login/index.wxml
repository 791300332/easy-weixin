<view>
  <view class='weui-cell'> 
    <view class='weui-cell_input'> 
      <input placeholder='手机号' bindinput='phoneInp' ></input>
    </view>
  </view>
  <view class='weui-cell'>
    <view class='weui-cell_input'>
        <input placeholder='验证码' bindinput='codeInp'></input>
