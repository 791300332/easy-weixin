@import "../../lib/common.wxss";

.ranking-body {
  padding: 20rpx 20rpx;
}

.item {
  width:100%;
  background-color:#FFEFD5;
  margin-top:5px;
}

.item image {
  width:48px;
  height:48px;
  float:left;
  border-radius: 50%;
  margin-top:7px;
}

.item-info {
  width:40%;
  padding:15px;
  float:left;
  text-align: left;
}

.item-info-name {
  font-size:16px;
  color:#aaa
}


.item-right {
  width:40%;
  float:right;
  text-align: right;
}

.item-image-view {
  margin-top:-70px;
}

.item-right-image {
  float:right;
}

.item-right image {
  width:24px;
  height:24px;
  border-radius: 50%;
  margin-left:-15px;
}

.item-right-num {
  color:#FF8C00;
  margin-top:31px;
}

.room-header {

}

.room-out {
  width:20%;
  float:right;
}

.room-out button{
  width:36px;
  height:36px;
}

.room-out image{
  width:36px;
  height:36px;
  float:right;
}

.room-user {
  float:left;
  width:80%;
}

.room-user button{
  width:48px;
  height:48px;
  float:left;
}

.room-user image{
  width:47px;
  height:47px;
  /* border-radius: 50%; */
  margin-left:-15px;
}

.btn-view {
  position:fixed;
  bottom:0;
  right:15px;  
}

.btn-create{
  border-radius:50%;
  background-color:red;
  font-size:14px;
  color:#FFFFFF;
  box-shadow: 0 2px 20px #000000, 0 0 20px #000000;
}

.btn-join{
  border-radius:50%;
  background-color:green;
  font-size:14px;
  color:#FFFFFF;
  margin-top:15px;
  margin-bottom:15px;
  box-shadow: 0 2px 20px #000000, 0 0 20px #000000;
}

.mymodal-view {
  margin-top:2px;
}

.mymodal-view-title{
  float:left;
  width:30%;
}

.mymodal-view span{
  color:red;
}

.mymodal-view input{
  display:block;
  overflow: hidden;
  border-style: solid;
}

