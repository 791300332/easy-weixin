@import "../../lib/common.wxss";

.ranking-body {
  padding: 20rpx 20rpx;
}

.item {
  width:100%;
  background-color:#FFEFD5
}

.item image {
  width:48px;
  height:48px;
  float:left;
  border-radius: 50%;
  margin-top:7px;
}

.item-info {
  width:50%;
  margin-left:15px;
  float:left;
  text-align: left;
}

.item-info-name {
  font-size:16px;
  color:#aaa
}

.item-info-level {
  font-size:12px;
  color:green;
  margin-top:-10px;
}

.item-question-answer {
  width:30%;
  float:right;
  text-align: right
}
